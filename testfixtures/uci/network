config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fd01:ed20:ecb4::/48'

config interface 'lan'
	option proto 'static'
	option ipaddr '10.42.0.1'
	option netmask '255.255.255.0'
	option ip6assign '60'
	option dns '1.1.1.1'

config interface 'wan'
	option proto 'dhcp'

config interface 'ahwlan'
	option proto 'static'
	option netmask '255.255.0.0'
	option ip6assign '64'
	option ip6ifaceid 'eui64'
	list ip6class 'local'
	option ipaddr '10.41.237.1'
	option dns '1.1.1.1'
	option device 'br-ahwlan'
	option gateway '10.41.1.1'

config device
	option name 'br-ahwlan'
	option type 'bridge'
	list ports 'eth0'
	list ports 'bat0'
	option igmp_snooping '1'

config interface 'bat0'
	option proto 'batadv'
	option routing_algo 'BATMAN_V'
	option bridge_loop_avoidance '1'
	option hop_penalty '30'
	option bonding '1'
	option aggregated_ogms '1'
	option ap_isolation '0'
	option fragmentation '1'
	option orig_interval '1000'
	option distributed_arp_table '1'
	option multicast_mode '1'
	option network_coding '1'
	option isolation_mark '0x00000000/0x00000000'
	option gw_mode 'client'

config interface 'batmesh0'
	option proto 'batadv_hardif'
	option master 'bat0'
